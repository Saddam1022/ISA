
@{ ViewData["Title"] = "adminstudent"; }

<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="~/data/css/stylesheet.css">
    <script src="https://kit.fontawesome.com/67ba5841f4.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js "></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js "></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js "></script>
    <title>HMS</title>
</head>

<body>
    <div class="bgm">
        <header>
            <nav class="navbar navbar-expand-sm navbar-dark">
                <a href="#" class="navbar-brand">StarHostel</a>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#Menu">
                    <span class="navbar-toggler icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="Menu">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link " href="/Home/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/ContactUs">ContactUs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Login">Log out</a>
                        </li>

                    </ul>
                </div>
            </nav>
        </header>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4 col-sm-4 col-xs-12"></div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <form name="myForm" action="/Admin/updatestudent" onsubmit="return(validate())">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label style="color:white">
                                    Name
                                </label>
                                <input type="text" class="form-control" name="name" value="@ViewData["name"]">
                            </div>
                            <div class="form-group col-md-6">
                                <label style="color:white">
                                    Father Name
                                </label>
                                <input type="text" class="form-control" name="fathername" value="@ViewData["fathername"]">
                            </div>
                            <div class="form-group col-md-6">
                                <label style="color:white">
                                    Email
                                </label>
                                <input type="text" class="form-control" name="email" value="@ViewData["email"]">
                            </div>

                            <div class="form-group col-md-6">
                                <label style="color:white">
                                    CNIC
                                </label>
                                <input type="text" class="form-control" readonly name="cnic" value="@ViewData["cnic"]">
                            </div>
                           
                            </div>
                        <div class="form-row">

                            <div class="form-group col-md-6">
                                <label style="color:white">
                                    Present Address
                                </label>
                                <input type="text" class="form-control" name="paddress" value="@ViewData["paddress"]">
                            </div>
                            <div class="form-group col-md-6">
                                <label style="color:white">
                                    Permanent Address
                                </label>
                                <input type="text" class="form-control" name="praddress" value="@ViewData["praddress"]">
                            </div>

                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label style="color:white">
                                    City
                                </label>
                                <input type="text " class="form-control " name="city" value="@ViewData["city"]">
                            </div>
                            <div class="form-group col-md-4 ">
                                <label style="color:white">
                                    Province
                                </label>
                                <input type="text " class="form-control " name="province" value="@ViewData["province"]">
                            </div>
                            <div class="form-group col-md-4 ">
                                <label style="color:white">
                                    Room Type
                                </label>
                                <input type="text " class="form-control " name="room" value="@ViewData["room"]">
                            </div>
                            <div class="form-group col-md-4">
                                <label style="color:white">
                                    Zip
                                </label>
                                <input type="text " class="form-control " readonly name="zip" value="@ViewData["zip"]">
                            </div>

                            <div class="form-group col-md-4">
                                <label style="color:white">
                                    Room No.
                                </label>
                                <input type="text " class="form-control "  name="roomno" value="@ViewData["roomno"]">
                            </div>

                            <div class="form-group col-md-4">
                                <label style="color:white">
                                    Fee
                                </label>
                                <input type="text" class="form-control " name="fee" value="@ViewData["fee"]">
                            </div>

                        </div>

                        <input type="hidden" name="cnic" value="@ViewData["cnic"]" />
                        <button class="btn btn-primary btn-lg float-right " name="update" value="updates" type="submit"> Save</button>
                         
                        <button class="btn btn-primary btn-lg float-left " type="submit"><a class="nav-link" href="/Admin/Adminportal">Back</button>
                    </form>
                       
                      </div>
                    
                </div>
            
              
                <div class="col-md-4 col-sm-4 col-xs-12 "></div>
            </div>
        </div>

        <footer class="border-top footer text-muted ">
            <div class="container1 text-center py-3 ">
                &copy; 2020 - webApp - <a asp-area=" ">Privacy</a>
            </div>
        </footer>
    </div>
</body>

</html>