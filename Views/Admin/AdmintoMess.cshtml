
@{

    ViewData["Title"] = "AdmintoMess";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="~/data/css/stylesheet.css">
    <script src="https://kit.fontawesome.com/67ba5841f4.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <title>HMS</title>
</head>

<body>
    <div class="bgm">
        <header>
            <nav class="navbar navbar-expand-sm navbar-dark">
                <a href="#" class="navbar-brand">StarHostel</a>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#Menu">
                    <span class="navbar-toggler icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="Menu">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link " href="/Home/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/ContactUs">ContactUs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Login">Log out</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <div id='main-content' class="card-deck" style="margin: 50px 0 0 0">

            <div class="card" style="width: 10rem;">
                <div class="card-body">
                    <h5 class="card-title"><b>Monday</b></h5>
                    <form action="/Admin/updateMess" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="mlunch" value="@ViewData["mlunch"]" >
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="mdinner" value="@ViewData["mdinner"]">
                        </div>
                        <input type="hidden" name="ID" value="@ViewData["id"]" />
                        <input type="submit" name="button" value="MUpdate" />
                    </form>
                </div>
            </div>

            <div class="card" style="width: 10rem;">
                <div class="card-body">
                    <h5 class="card-title"><b>Tuesday</b></h5>
                    <form action="/Admin/updateMess" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="tlunch" value="@ViewData["tlunch"]" >
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="tdinner" value="@ViewData["tdinner"]">
                        </div>
                        <input type="hidden" name="ID2" value="@ViewData["id2"]" />
                        <input type="submit" name="button" value="TUpdate" />
                    </form>

                </div>
            </div>

            <div class="card" style="width: 10rem;">
                <div class="card-body">
                    <h5 class="card-title"><b>Wednesday</b></h5>
                    <form action="/Admin/updateMess" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="wlunch" value="@ViewData["wlunch"]" id="usr">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="wdinner" value="@ViewData["wdinner"]">
                        </div>
                        <input type="hidden" name="ID3" value="@ViewData["id3"]" />
                        <input type="submit" name="button" value="WUpdate" />
                    </form>

                </div>
            </div>
            <div class="card" style="width: 10rem;">
                <div class="card-body">
                    <h5 class="card-title"><b>Thursday</b></h5>
                    <form action="/Admin/updateMess" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="thlunch" value="@ViewData["thlunch"]" id="usr">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="thdinner" value="@ViewData["thdinner"]">
                        </div>
                        <input type="hidden" name="ID4" value="@ViewData["id4"]" />
