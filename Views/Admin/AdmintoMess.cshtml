                </div>
            </div>

            <div class="card" style="width: 10rem;">
                <div class="card-body">
                    <h5 class="card-title"><b>Friday</b></h5>
                    <form action="/Admin/updateMess" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="flunch" value="@ViewData["flunch"]" id="usr">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="fdinner" value="@ViewData["fdinner"]">
                        </div>
                        <input type="hidden" name="ID5" value="@ViewData["id5"]" />
                        <input type="submit" name="button" value="FUpdate" />
                    </form>
                    </div>
                </div>

                <div class="card" style="width: 10rem;">
                    <div class="card-body">
                        <h5 class="card-title"><b>Saturday</b></h5>
                        <form action="/Admin/updateMess" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" name="slunch" value="@ViewData["slunch"]" id="usr">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="sdinner" value="@ViewData["sdinner"]">
